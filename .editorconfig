# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# JavaScript files
[*.{js,mjs}]
indent_style = space
indent_size = 2

# TypeScript files
[*.{ts,d.ts}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = space
indent_size = 4

# Package files
[{package.json,*.yml}]
indent_style = space
indent_size = 2